FROM hkjeon13/koai-x86-env
RUN wget https://www.python.org/ftp/python/3.7.12/Python-3.7.12.tgz && \
tar -xvf Python-3.7.12.tgz && \
    cd Python-3.7.12 && \
    ./configure --enable-optimizations && \
    make -j 4 && \
    make altinstall && \
    cd .. && \
    rm -rf Python-3.7.12 && \
    rm Python-3.7.12.tgz

